.page-container {
  min-height: 100vh;
  background: #f7f7f7;
}

.user-info {
  background: #fff;
  padding: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.user-avatar {
  width: 160rpx;
  height: 160rpx;
  border-radius: 50%;
  margin-bottom: 20rpx;
}

.user-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 500;
}

.button-area {
  margin-top: 60rpx;
  padding: 0 40rpx;
}

.logout-btn {
  width: 100% !important;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  background: #fff;
  color: #ff4d4f;
  font-size: 32rpx;
  border-radius: 44rpx;
  border: 2rpx solid #ff4d4f;
}

.logout-btn::after {
  border: none;
}

/* 按钮点击效果 */
.logout-btn:active {
  opacity: 0.8;
}