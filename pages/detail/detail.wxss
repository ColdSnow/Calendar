.detail-container {
    padding: 30rpx;
    background: #fff;
    min-height: 100vh;
  }
  
  .date-info {
    padding: 30rpx;
    background: #f8f8f8;
    border-radius: 20rpx;
    margin: 0 30rpx 30rpx;
  }
  
  .solar-date {
    font-size: 40rpx;
    font-weight: bold;
    color: #333;
    position: relative;
  }
  
  .solar-date::after {
    content: '';
    position: absolute;
    bottom: -6rpx;
    left: 0;
    width: 100%;
    height: 2rpx;
    background: #999;
    transform: scaleX(0.8);
  }
  
  .lunar-info {
    font-size: 28rpx;
    color: #666;
    margin-bottom: 20rpx;
  }
  
  .festival {
    margin-left: 20rpx;
    color: #f56c6c;
  }
  
  .almanac-info {
    font-size: 26rpx;
    color: #999;
    display: flex;
    flex-direction: column;
    gap: 10rpx;
  }
  
  .mood-memo-section {
    padding: 20rpx 0;
  }
  
  .section-title {
    font-size: 32rpx;
    font-weight: bold;
    margin: 30rpx 0 20rpx;
  }
  
  .mood-picker {
    display: flex;
    flex-wrap: wrap;
    gap: 20rpx;
    margin-bottom: 30rpx;
  }
  
  .mood-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 120rpx;
    padding: 10rpx;
    border-radius: 10rpx;
    background: #f8f8f8;
  }
  
  .mood-item.selected {
    background: #e6f7ef;
    border: 2rpx solid #07c160;
  }
  
  .mood-icon {
    font-size: 40rpx;
    margin-bottom: 10rpx;
  }
  
  .mood-item text {
    font-size: 24rpx;
    color: #666;
  }
  
  .memo-input {
    width: 100%;
    height: 200rpx;
    padding: 20rpx;
    box-sizing: border-box;
    border: 2rpx solid #eee;
    border-radius: 10rpx;
    font-size: 28rpx;
  }
  
  .save-btn {
    width: 100% !important;
    height: 80rpx;
    line-height: 80rpx;
    font-size: 32rpx;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 40rpx;
    background: #07c160;
    color: #fff;
    margin-top: 40rpx;
  }
  
  .date-picker {
    margin: 30rpx;
  }
  
  .picker-content {
    background: #f8f8f8;
    padding: 30rpx;
    border-radius: 20rpx;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .selected-date {
    font-size: 36rpx;
    font-weight: bold;
    color: #333;
  }
  
  .picker-tip {
    font-size: 24rpx;
    color: #999;
  }
  
  .date-header {
    padding: 30rpx;
    text-align: center;
  }