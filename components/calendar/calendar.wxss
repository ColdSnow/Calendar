.calendar {
  background: #fff;
  border-radius: 12rpx;
  padding: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0,0,0,0.1);
}

.calendar-header {
  display: flex;
  padding: 20rpx 0;
  border-bottom: 1rpx solid #eee;
}

.week-day {
  flex: 1;
  text-align: center;
  font-size: 28rpx;
  color: #666;
}

.calendar-body {
  display: grid;
  grid-template-columns: repeat(7, 1fr);
  gap: 2rpx;
  padding-top: 20rpx;
}

.day {
  aspect-ratio: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  position: relative;
  padding: 10rpx;
}

.date-number {
  font-size: 28rpx;
  font-weight: 500;
}

.current-month {
  color: #333;
}

.other-month {
  color: #ccc;
}

.has-record {
  background: #f8f8f8;
}

.mood-icon {
  font-size: 24rpx;
  position: absolute;
  bottom: 6rpx;
  right: 6rpx;
}